<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >
    
    <ImageView android:id="@id/img_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/card_back"
        android:background="@drawable/shadow_back"/>
    
    <ImageView android:id="@id/img_front"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shadow"/>
    
    <FrameLayout android:id="@id/img_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/card_selected_off">
        
	    <ImageView android:id="@id/img_on"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/card_selected_on"/>
	    
    </FrameLayout>
    
</FrameLayout>
