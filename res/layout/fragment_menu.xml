<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:clickable="true">
    
    <RelativeLayout 
        android:layout_width="245dip"
        android:layout_height="330dip"
        android:padding="0dip"
        android:background="@drawable/bg_alert">
        
        <ImageView android:id="@id/btn_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="26dip"
            android:layout_marginTop="20dip"
            android:onClick="onClick"
            android:src="@drawable/btn_close"/>
        
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dip"
            android:src="@drawable/title_menu"/>
        
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="74dip"
            android:orientation="vertical">
            
            <ImageView android:id="@id/btn_restart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:src="@drawable/btn_restart"/>
            
            <ImageView android:id="@id/btn_game_guide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dip"
                android:onClick="onClick"
                android:src="@drawable/btn_game_guide"/>
            <!-- 
            <ImageView android:id="@id/btn_gostop_guide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dip"
                android:onClick="onClick"
                android:src="@drawable/btn_gostop_guide"/>
             -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_sound"/>
                <TextView android:id="@id/txt_effect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:textSize="@dimen/text_size_big"
                    android:textColor="#613209"
                    android:text="효과음"/>
	            <CheckBox android:id="@id/check_effect"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="10dip"
	                android:button="@android:color/transparent"
	                android:background="@drawable/radio_sound"/>
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dip"
                android:gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_sound"/>
                <TextView android:id="@id/txt_bgm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:textSize="@dimen/text_size_big"
                    android:textColor="#613209"
                    android:text="배경음"/>
	            <CheckBox android:id="@id/check_bgm"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="10dip"
	                android:button="@android:color/transparent"
	                android:background="@drawable/radio_sound"/>
            </LinearLayout>
        </LinearLayout>
        
    </RelativeLayout>
    

</LinearLayout>
