<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_game">
    
    <LinearLayout android:id="@id/lin_floor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"/>
    
    <ImageView android:id="@id/img_area_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/area_underline"/>
    
    <ImageView android:id="@id/img_hand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:background="@drawable/img_hand"/>
    
    <FrameLayout android:id="@id/fra_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    
    <ImageView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/img_gradient"/>
    
    <ImageView android:id="@id/img_finger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:background="@drawable/img_finger"/>
    
    <ImageView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/img_gradient2"/>
    
    <LinearLayout android:id="@+id/linear_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <ImageView android:id="@+id/btn_result_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_result_show"/>
        <ImageView android:id="@+id/btn_result_restart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dip"
            android:src="@drawable/btn_result_restart"/>
    </LinearLayout>
    
    <FrameLayout android:id="@id/fra_drag"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:background="#55000000">
	    <ImageView 
	        android:layout_width="match_parent"
	        android:layout_height="80dip"
	        android:layout_gravity="center"
	        android:background="@drawable/img_drag_bg"/>
	    <TextView android:id="@+id/txt_drag"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center"
		    android:layout_marginBottom="2dip"
			android:shadowColor="#FF000000"
			android:shadowDx="3.0"
			android:shadowDy="3.0"
			android:shadowRadius="3.0"
		    android:textColor="#ffe7ffc7"
		    android:textSize="@dimen/text_size_big"
		    android:textStyle="bold"/>
	</FrameLayout>
	
    <ImageView android:id="@id/img_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_arrow"/>
    
    <ImageView android:id="@id/btn_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/btn_start"/>
    
</FrameLayout>
