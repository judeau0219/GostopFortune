<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:clickable="true">
    
    <RelativeLayout 
        android:layout_width="265dip"
        android:layout_height="290dip"
        android:padding="0dip"
        android:background="@drawable/bg_alert">
        
        <ImageView android:id="@id/btn_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="26dip"
            android:layout_marginTop="20dip"
            android:onClick="onClick"
            android:src="@drawable/btn_close"/>
         
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dip"
            android:src="@drawable/title_alert"/>
        
        <TextView android:id="@id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="76dip"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:textSize="@dimen/text_size_alert_title"
            android:textStyle="bold"
            android:textColor="#9e2141"/>
        
        <TextView android:id="@id/txt_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dip"
            android:gravity="center_horizontal"
            android:textSize="@dimen/text_size_normal"
            android:textColor="#4a3427"/>
       
        <ImageView android:id="@id/btn_restart"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginBottom="38dip"
			android:layout_alignParentBottom="true"
			android:layout_centerHorizontal="true"
			android:onClick="onClick"
			android:src="@drawable/btn_restart"/>
         
    </RelativeLayout>
    

</LinearLayout>
