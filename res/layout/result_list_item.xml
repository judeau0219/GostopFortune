<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="vertical">
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dip">
		<ImageView android:id="@id/img_result"
		    android:layout_width="40dip"
		    android:layout_height="60dip"/>
		<TextView android:id="@id/txt_result1"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="10dip"
		    android:layout_marginTop="2dip"
		    android:layout_alignTop="@id/img_result"
		    android:layout_toRightOf="@id/img_result"
		    android:textColor="#ff9e2141"
		    android:textSize="@dimen/text_size_normal"
		    android:textStyle="bold"/>
		<TextView android:id="@id/txt_result2"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="10dip"
		    android:layout_marginTop="3dip"
		    android:layout_toRightOf="@id/img_result"
		    android:layout_below="@id/txt_result1"
		    android:textColor="#ff4a3427"
		    android:textSize="@dimen/text_size_normal"
		    android:textStyle="bold"/>
	</RelativeLayout>
	
	<com.ndl.android.gostopfortune.view.DashPath
	    android:id="@id/dash_path"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"/>
	
</LinearLayout>

