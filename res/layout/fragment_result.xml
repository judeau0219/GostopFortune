<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clickable="true"
    android:gravity="center">
    
    <RelativeLayout 
        android:layout_width="320dip"
        android:layout_height="450dip"
        android:padding="0dip"
        android:background="@drawable/bg_result">
        
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dip"
            android:src="@drawable/title_result"/>
        
        <ImageView android:id="@id/btn_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="26dip"
            android:layout_marginTop="20dip"
            android:onClick="onClick"
            android:src="@drawable/btn_close"/>
        
        <ImageView android:id="@id/img_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dip"
            android:src="@drawable/title_result"/>
        
        <ImageView 
            android:layout_width="260dip"
	        android:layout_height="216dip"
	        android:layout_below="@id/img_title"
	        android:layout_marginTop="10dip"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_list"/>
        
        <ListView android:id="@id/list_result"
	        android:layout_width="240dip"
	        android:layout_height="210dip"
	        android:layout_below="@id/img_title"
	        android:layout_marginTop="13dip"
	        android:layout_centerHorizontal="true"
	        android:divider="#0000"/>
        
        <ImageView 
            android:layout_width="254dip"
	        android:layout_height="74dip"
	        android:layout_alignBottom="@id/list_result"
	        android:layout_marginTop="13dip"
	        android:layout_centerHorizontal="true"
	        android:background="@drawable/img_list_bottom"/>
        
        <TextView android:id="@id/txt_result1"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_below="@id/list_result"
		    android:gravity="center"
	        android:layout_marginTop="15dip"
	        android:layout_centerHorizontal="true"
		    android:textColor="#ffcb5100"
		    android:textSize="@dimen/text_size_big"
		    android:textStyle="bold"/>
        
        <TextView android:id="@id/txt_result2"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_below="@id/txt_result1"
		    android:gravity="center"
	        android:layout_marginTop="3dip"
	        android:layout_centerHorizontal="true"
	        android:typeface="normal"
		    android:textColor="#ff874000"
		    android:textSize="@dimen/text_size_normal"
		    android:textStyle="bold"/>
        
        <com.ndl.android.gostopfortune.view.GostopButton
	        android:id="@id/btn_gostop"
	        android:layout_width="260dip"
	        android:layout_height="48dip"
	        android:layout_marginBottom="32dip"
			android:layout_alignParentBottom="true"
			android:layout_centerHorizontal="true"
	        android:onClick="onClick"/>
        
    </RelativeLayout>
    

</LinearLayout>
